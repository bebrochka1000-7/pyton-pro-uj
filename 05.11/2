x=input(str("Имя"))
y=input(str("Фамилия"))
flag=0
z=input(str("Полный возраст"))
if(z>="17" and x!="Микордий" and y!="Пармезанов" and flag==1 ):
    print("Добро пожаловать")
if(z<"17" and flag==1):
    print("Причина в возрасте")
if(x=="Микордий" and y=="Пармезанов" and flag==0 ):
    print("Вы в черном списке")
